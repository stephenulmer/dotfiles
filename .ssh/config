## If the agent specified in SSH_AUTH_SOCK has identities, use it. Otherwise
## override per host. SSH_AUTH_SOCK is alwasy set by macOS, but doesn't point
## to the 1Password agent.
Match exec "ssh-add -l"
  IdentityAgent SSH_AUTH_SOCK

Host *
  IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"
  ForwardAgent yes
